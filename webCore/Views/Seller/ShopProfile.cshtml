
@{
    Layout = "~/Views/Shared/_SellerLayout.cshtml";
    ViewData["Title"] = "Quản lý Shop";
}

<div class="shop-profile-content p-3">

    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a class="nav-link active" id="basic-tab" data-toggle="tab" href="#basic-info" role="tab">Thông tin cơ bản</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="identity-tab" data-toggle="tab" href="#identity-info" role="tab">Thông tin định danh</a>
        </li>
    </ul>

    <div class="tab-content" id="shopTabsContent">

        <div class="tab-pane fade show active" id="basic-info" role="tabpanel" aria-labelledby="basic-tab">

            <h5 class="mb-4">Thông tin cơ bản</h5>

            <div class="card p-4">

                <div class="row align-items-center mb-4 border-bottom pb-3">
                    <div class="col-md-3 text-muted">Tên shop</div>
                    <div class="col-md-6">
                    </div>
                    <div class="col-md-3 text-right">
                        <button class="btn btn-sm btn-outline-secondary mr-2">Xem shop của tôi</button>
                        <button class="btn btn-sm btn-primary">Chỉnh sửa</button>
                    </div>
                </div>

                <div class="row align-items-center mb-4 border-bottom pb-3">
                    <div class="col-md-3 text-muted">Logo shop</div>
                    <div class="col-md-6 d-flex align-items-center">
                        <div class="logo-placeholder" style="width: 80px; height: 80px; border-radius: 50%; background-color: #e0f7fa; border: 1px solid #00bcd4;">
                        </div>
                    </div>
                </div>

                <div class="row align-items-center mb-2">
                    <div class="col-md-3 text-muted">Mô tả shop</div>
                    <div class="col-md-6">
                    </div>
                </div>
            </div>

        </div>

        <div class="tab-pane fade" id="identity-info" role="tabpanel" aria-labelledby="identity-tab">

            <h5 class="mb-4">Thông tin định danh</h5>

            <div class="card p-4">

                <div class="d-flex justify-content-end mb-4">
                    <button class="btn btn-sm btn-primary">Chỉnh sửa</button>
                </div>

                <div class="row align-items-center mb-4 border-bottom pb-3">
                    <div class="col-md-4 text-muted">Hình thức định danh</div>
                    <div class="col-md-8">
                        <span class="identity-type-display">Chứng Minh Nhân Dân (CMND)</span>
                    </div>
                </div>

                <div class="row align-items-center mb-4 border-bottom pb-3">
                    <div class="col-md-4 text-muted">Số Chứng Minh Nhân Dân (CMND)</div>
                    <div class="col-md-8">
                        <span class="id-number-display">*******</span>
                    </div>
                </div>

                <div class="row align-items-center mb-4 border-bottom pb-3">
                    <div class="col-md-4 text-muted">Họ & Tên</div>
                    <div class="col-md-8">
                        <span class="full-name-display">*******</span>
                    </div>
                </div>

                <div class="row align-items-center mb-4 border-bottom pb-3">
                    <div class="col-md-4 text-muted">Hình chụp của thẻ CMND/CCCD (Hộ chiếu)</div>
                    <div class="col-md-8">
                        <div class="lock-icon text-secondary" style="font-size: 24px;">
                            <i class="fa-solid fa-lock"></i>
                        </div>
                    </div>
                </div>

                <div class="row align-items-center mb-2">
                    <div class="col-md-4 text-muted">Ảnh đang cầm CMND/CCCD (Hộ chiếu) của bạn</div>
                    <div class="col-md-8">
                        <div class="lock-icon text-secondary" style="font-size: 24px;">
                            <i class="fa-solid fa-lock"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
}