@{
    ViewData["Title"] = "Admin Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Login</title>
    <link rel="stylesheet" href="~/css/Admin_sigin.css" />
</head>

<body>
    <div class="login-container">
        <h2>Admin Login</h2>

        <div id="errorBox" class="alert alert-danger" style="display:none;"></div>

        <form id="loginForm" onsubmit="return false;">
            <div class="input-group">
                <label for="username">Username</label>
                <input type="text" id="username" required />
            </div>

            <div class="input-group">
                <label for="password">Password</label>
                <input type="password" id="password" required />
            </div>

            <button type="button" class="login-btn" onclick="loginAdmin()">Login</button>

            <a href="#" class="link">Forgot Password?</a>
        </form>
    </div>

    <script>
        async function loginAdmin() {
            const username = document.getElementById("username").value.trim();
            const password = document.getElementById("password").value.trim();
            const errorBox = document.getElementById("errorBox");

            // RESET lỗi
            errorBox.style.display = "none";
            errorBox.innerText = "";
            errorBox.style.color = "red";

            if (!username && !password) {
                errorBox.style.display = "block";
                errorBox.innerText = "Vui lòng nhập tài khoản và mật khẩu.";
                return;
            }

            if (!username) {
                errorBox.style.display = "block";
                errorBox.innerText = "Vui lòng nhập tài khoản.";
                return;
            }

            if (!password) {
                errorBox.style.display = "block";
                errorBox.innerText = "Vui lòng nhập mật khẩu.";
                return;
            }

            const payload = {
                Username: username,
                Password: password
            };

            try {
                const response = await fetch("/api/adminSignin/login", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(payload)
                });

                const result = await response.json();

                if (!result.success) {
                    errorBox.style.display = "block";
                    errorBox.style.color = "red";
                     errorBox.innerText = "Sai tài khoản hoặc mật khẩu.";
                    return;
                }

                // Lưu admin info
                localStorage.setItem("AdminId", result.adminId);
                localStorage.setItem("AdminToken", result.token);

                // Redirect to Dashboard page
                window.location.href = "/Dashboard";

            } catch (err) {
                errorBox.style.display = "block";
                errorBox.style.color = "red";
                errorBox.innerText = "Server error!";
            }
        }
    </script>
</body>
</html>
