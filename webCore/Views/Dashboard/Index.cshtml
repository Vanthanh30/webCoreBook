@{
    ViewData["Title"] = "Index";
    Layout = "Admin";
}
<link rel="stylesheet" href="/css/Account_admin.css" />
<div class="flex-grow-1 p-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-4">
                <div class="card-body text-center">
                    <i class="fas fa-users card-icon fa-3x"></i>
                    <h3>Người Dùng</h3>
                    <p>@ViewBag.TotalUsers</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-warning mb-4">
                <div class="card-body text-center">
                    <i class="fas fa-list card-icon fa-3x"></i>
                    <h3>Danh Mục</h3>
                    <p>@ViewBag.TotalCategories</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-info mb-4">
                <div class="card-body text-center">
                    <i class="fas fa-box card-icon fa-3x"></i>
                    <h3>Sản Phẩm</h3>
                    <p>@ViewBag.TotalProducts</p>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <h3>Sản Phẩm Cần Duyệt</h3>
        <table class="account-table">
            <thead>
                <tr>
                    <th>Tên Sản Phẩm</th>
                    <th>Danh Mục</th>
                    <th>Giá</th>
                    <th>Ngày Tạo</th>
                    <th>Trạng Thái</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.PendingProducts != null && ViewBag.PendingProducts.Count > 0)
                {
                    foreach (var product in ViewBag.PendingProducts)
                    {
                        <tr>
                            <td>
                                <a href="/Admin_product/Details/@product.Id" class="text-primary">
                                    @product.Title
                                </a>
                            </td>
                            <td>@(product.CategoryTitle ?? "Chưa phân loại")</td>
                            <td>@product.Price.ToString("N0") VNĐ</td>
                            <td>@product.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <span class="badge badge-warning">@product.Status</span>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">Không có sản phẩm cần duyệt.</td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="/Admin_product" class="btn btn-link">Xem tất cả sản phẩm →</a>
    </div>
</div>