@{
    ViewData["Title"] = "Index";
    Layout = "Admin";
}
<link rel="stylesheet" href="/css/Account_admin.css" />
<div class="flex-grow-1 p-4">
    <div class="row">
        <div class="col-md-4">
            <a asp-controller="Admin_user" asp-action="Index" class="text-decoration-none">
                <div class="card text-white bg-primary mb-4 h-100 shadow-sm" style="transition: transform 0.2s;">
                    <div class="card-body text-center d-flex flex-column justify-content-center align-items-center">
                        <i class="fas fa-users card-icon fa-3x mb-3"></i>
                        <h3>Người Dùng</h3>
                        <span class="fw-bold" style="font-size: 2rem; line-height: 0.6; text-shadow: 2px 2px 4px rgba(0,0,0,0.2);">
                            @ViewBag.TotalUsers
                        </span>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a asp-controller="Admin_category" asp-action="Index" class="text-decoration-none">
                <div class="card text-white bg-warning mb-4 h-100 shadow-sm" style="transition: transform 0.2s;">
                    <div class="card-body text-center d-flex flex-column justify-content-center align-items-center">
                        <i class="fas fa-list card-icon fa-3x mb-3"></i>
                        <h3>Danh Mục</h3>
                        <span class="fw-bold" style="font-size: 2rem; line-height: 0.6; text-shadow: 2px 2px 4px rgba(0,0,0,0.2);">
                            @ViewBag.TotalCategories
                        </span>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a asp-controller="Admin_product" asp-action="Index" class="text-decoration-none">
                <div class="card text-white bg-info mb-4 h-100 shadow-sm" style="transition: transform 0.2s;">
                    <div class="card-body text-center d-flex flex-column justify-content-center align-items-center">
                        <i class="fas fa-box card-icon fa-3x mb-3"></i>
                        <h3>Sản Phẩm</h3>
                        <span class="fw-bold" style="font-size: 2rem; line-height: 0.6; text-shadow: 2px 2px 4px rgba(0,0,0,0.2);">
                            @ViewBag.TotalProducts
                        </span>
                    </div>
                </div>
            </a>
        </div>
    </div>
    <div class="container">
        <h3>Sản Phẩm Cần Duyệt</h3>
        <table class="account-table">
            <thead>
                <tr>
                    <th>Tên Sản Phẩm</th>
                    <th>Danh Mục</th>
                    <th>Giá</th>
                    <th>Ngày Tạo</th>
                    <th>Trạng Thái</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.PendingProducts != null && ViewBag.PendingProducts.Count > 0)
                {
                    foreach (var product in ViewBag.PendingProducts)
                    {
                        <tr>
                            <td>
                                <a href="/Admin_product/Details/@product.Id" class="text-primary">
                                    @product.Title
                                </a>
                            </td>
                            <td>@(product.CategoryTitle ?? "Chưa phân loại")</td>
                            <td>@product.Price.ToString("N0") VNĐ</td>
                            <td>@product.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <span class="badge badge-warning">@product.Status</span>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">Không có sản phẩm cần duyệt.</td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="/Admin_product" class="btn btn-link">Xem tất cả sản phẩm →</a>
    </div>
</div>