@model webCore.Models.PaymentInfoViewModel
@{
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="/css/paymentInfo.css" asp-append-version="true" />
}

<div class="payment-info-page">
    <div class="container">
        <h1 class="page-title-main">THÔNG TIN THANH TOÁN</h1>

        <div class="row">
            <div class="col-lg-8">
                <!-- Products Table -->
                <div class="payment-products-table">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Sản phẩm</th>
                                <th>Hình ảnh</th>
                                <th>Đơn giá</th>
                                <th>Số lượng</th>
                                <th>Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@item.Title</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Image))
                                        {
                                            <img src="@item.Image" alt="@item.Title" class="product-image-small" />
                                        }
                                        else
                                        {
                                            <div class="no-image-placeholder">
                                                <i class="fa-solid fa-image"></i>
                                            </div>
                                        }
                                    </td>
                                    <td>@((item.Price * (1 - item.DiscountPercentage / 100)).ToString("N0")) đ</td>
                                    <td>@item.Quantity</td>
                                    <td>@(((item.Price * (1 - item.DiscountPercentage / 100)) * item.Quantity).ToString("N0")) đ</td>
                                </tr>
                            }
                            <tr class="summary-row-table">
                                <td colspan="4" style="text-align: right;">Tổng Tiền</td>
                                <td>@Model.TotalAmount.ToString("N0") đ</td>
                            </tr>
                            <tr class="summary-row-table final-amount">
                                <td colspan="4" style="text-align: right;">Số Tiền Cần Thanh Toán</td>
                                <td>@Model.FinalAmount.ToString("N0") đ</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="col-lg-4">
                <!-- Payment Form -->
                <div class="payment-form-box">
                    <h4>
                        <i class="fa-solid fa-file-invoice"></i>
                        Thông tin giao hàng
                    </h4>
                    <form method="post" asp-action="ConfirmPayment" asp-controller="Checkout">
                        <div class="form-group">
                            <label for="fullName">
                                <i class="fa-solid fa-user"></i>
                                Họ và tên
                            </label>
                            <input type="text"
                                   id="fullName"
                                   name="FullName"
                                   class="form-control-custom"
                                   placeholder="Nhập họ và tên"
                                   required />
                        </div>

                        <div class="form-group">
                            <label for="phoneNumber">
                                <i class="fa-solid fa-phone"></i>
                                Số điện thoại
                            </label>
                            <input type="tel"
                                   id="phoneNumber"
                                   name="PhoneNumber"
                                   class="form-control-custom"
                                   placeholder="Nhập số điện thoại"
                                   required />
                        </div>

                        <div class="form-group">
                            <label for="address">
                                <i class="fa-solid fa-location-dot"></i>
                                Địa chỉ
                            </label>
                            <textarea id="address"
                                      name="Address"
                                      class="form-control-custom"
                                      rows="3"
                                      placeholder="Nhập địa chỉ giao hàng"
                                      required></textarea>
                        </div>

                        <button type="submit" class="btn-submit-payment">
                            <i class="fa-solid fa-check-circle"></i>
                            Xác Nhận Thanh Toán
                        </button>
                    </form>

                    <div class="security-note">
                        <i class="fa-solid fa-shield-halved"></i>
                        <span>Thông tin của bạn được bảo mật và mã hóa</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>