@model List<webCore.Models.Order>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Lịch sử Thanh Toán";
}

@section Styles {
    <link rel="stylesheet" href="~/css/PaymentHistory.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        .cart-title {
            margin-top: 0 !important;
            padding-top: 20px;
        }

            .cart-title h2.title {
                margin-top: 0 !important;
            }

        .order-card {
            border-radius: 12px;
            transition: 0.3s ease;
            background: white;
        }

            .order-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 4px 15px rgba(0,0,0,0.12);
            }

        .btn-status {
            border-radius: 10px;
            padding: 6px 18px;
            font-size: 13px;
            font-weight: 500;
            color: white; 
        }

        .badge-warning {
            background-color: #ffc107;
            color: #212529;
        }

        .badge-info {
            background-color: #17a2b8;
        }

        .badge-primary {
            background-color: #007bff;
        }

        .badge-success {
            background-color: #28a745;
        }

        .badge-danger {
            background-color: #dc3545;
        }

        .badge-secondary {
            background-color: #6c757d;
        }

        .badge-dark {
            background-color: #343a40;
        }

        .status-filter a {
            border-radius: 10px;
            margin: 3px;
            text-decoration: none;
        }

            .status-filter a.active {
                background: #007bff !important;
                color: white !important;
                border-color: #007bff !important;
            }

        .action-btn {
            margin-left: 5px;
            margin-top: 5px;
        }

        .overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 1050;
        }

            .overlay.show {
                display: block;
            }

        .custom-dialog.show {
            display: block;
        }
    </style>
}

<div class="container mt-5">
    <div class="row">
        <div class="col">
            <div class="cart-title">
                <h2 class="title">LỊCH SỬ THANH TOÁN</h2>
            </div>
        </div>
    </div>
</div>

<div class="container mt-3">
    <div class="d-flex flex-wrap status-filter justify-content-center">
        @{
            var statuses = new List<string> {
        "Tất cả", "Chờ xác nhận", "Đang giao",
        "Đã giao", "Đã hủy", "Trả hàng/Hoàn tiền"
        };
            var currentStatus = ViewBag.CurrentStatus as string ?? "Tất cả";
        }

        @foreach (var s in statuses)
        {
            <a href="javascript:void(0);" data-status="@s"
               class="btn btn-outline-secondary btn-sm status-filter-btn @(currentStatus == s ? "active" : "")">
                @s
            </a>
        }
    </div>
</div>

<div class="container mt-4 mb-5">
    @if (!Model.Any())
    {
        <p class="text-center text-muted mt-5">Không có đơn hàng nào.</p>
    }
    else
    {
        foreach (var order in Model)
        {
            string statusClass = "badge-secondary";
            switch (order.Status)
            {
                case "Chờ xác nhận": statusClass = "badge-warning"; break;
                case "Đang giao": statusClass = "badge-primary"; break;
                case "Đã giao": statusClass = "badge-success"; break;
                case "Đã hủy": statusClass = "badge-danger"; break;
                case "Trả hàng/Hoàn tiền": statusClass = "badge-dark"; break;
                default: statusClass = "badge-secondary"; break;
            }

            <div class="order-card border p-4 mb-4 shadow-sm" data-status="@order.Status">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <strong>Mã đơn:</strong> @order.Id <br />
                        <small>Ngày đặt: @order.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                    </div>

                    <div>
                        <span class="badge btn-status @statusClass">
                            @order.Status
                        </span>
                    </div>
                </div>

                <hr />

                @foreach (var item in order.Items)
                {
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="d-flex align-items-center">
                            <img src="@item.Image" alt="Product" style="width:65px;height:65px;border-radius:8px;margin-right:12px;object-fit:cover;" />
                            <div>
                                <strong>@item.Title</strong><br />
                                <small>Giá: @item.Price.ToString("N0")đ | SL: @item.Quantity</small>
                            </div>
                        </div>
                    </div>
                }

                <hr />

                <div class="d-flex justify-content-between align-items-center flex-wrap">
                    <div>
                        <strong>Tổng tiền:</strong>
                        <span class="text-danger font-weight-bold">@order.FinalAmount.ToString("N0")đ</span>
                    </div>

                    <div>
                        <a href="@Url.Action("OrderDetails", "Checkout", new { orderId = order.Id })"
                           class="btn btn-sm btn-outline-primary action-btn">Xem Chi Tiết</a>

                        @if (order.Status == "Chờ xác nhận")
                        {
                            <a href="@Url.Action("CancelOrder", "Checkout", new { orderId = order.Id })"
                               class="btn btn-sm btn-outline-danger action-btn"
                               onclick="return confirm('Bạn có chắc chắn muốn hủy đơn hàng này không?');">
                                Hủy đơn hàng
                            </a>
                            <a href="@Url.Action("ContactSeller", "Checkout", new { orderId = order.Id })"
                               class="btn btn-sm btn-outline-secondary action-btn">Liên hệ người bán</a>
                        }

                        else if (order.Status == "Đang giao")
                        {
                            <a href="@Url.Action("ConfirmDelivery", "Checkout", new { orderId = order.Id })"
                               class="btn btn-sm btn-outline-success action-btn">Đã nhận hàng</a>
                            <a href="@Url.Action("ContactSeller", "Checkout", new { orderId = order.Id })"
                               class="btn btn-sm btn-outline-secondary action-btn">Liên hệ người bán</a>
                        }
                        else if (order.Status == "Đã giao")
                        {
                            @foreach (var item in order.Items)
                            {
                                <a href="@Url.Action("ReviewProduct", "Checkout", new { orderId = order.Id, productId = item.ProductId })"
                                   class="btn btn-sm btn-outline-primary action-btn">
                                    Đánh giá
                                </a>
                            }
                            <a class="btn btn-sm btn-outline-danger action-btn"
                               href="@Url.Action("ReturnReason", "Checkout", new { orderId = order.Id })">
                                Yêu cầu trả hàng
                            </a>
                        }
                        else if (order.Status == "Trả hàng/Hoàn tiền")
                        {
                            <a href="@Url.Action("ReturnReason", "Checkout", new { orderId = order.Id })"
                               class="btn btn-sm btn-outline-secondary action-btn">Lý do trả hàng</a>
                        }
                    </div>
                </div>
            </div>
        }
    }
</div>

@section Scripts {
    <script src="~/js/PaymentHistory.js" asp-append-version="true"></script>
    <script>
        document.querySelectorAll('.status-filter-btn').forEach(btn => {
            btn.addEventListener('click', function (e) {
                e.preventDefault();
                const status = this.getAttribute('data-status');

                document.querySelectorAll('.status-filter-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');

                document.querySelectorAll('.order-card').forEach(card => {
                    if (status === 'Tất cả' || card.getAttribute('data-status') === status) {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                });
            });
        });
    </script>
}