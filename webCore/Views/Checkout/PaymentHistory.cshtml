@model List<webCore.Models.Order>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Lịch sử Thanh Toán";
}

@section Styles {
    <link rel="stylesheet" href="~/css/PaymentHistory.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        /* Fix margin cho title */
        .cart-title {
            margin-top: 0 !important;
            padding-top: 20px;
        }

            .cart-title h2.title {
                margin-top: 0 !important;
            }

        .order-card {
            border-radius: 12px;
            transition: 0.3s ease;
            background: white;
        }

            .order-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 4px 15px rgba(0,0,0,0.12);
            }

        .btn-status {
            border-radius: 10px;
            padding: 6px 18px;
            font-size: 13px;
            font-weight: 500;
        }

        .status-filter a {
            border-radius: 10px;
            margin: 3px;
            text-decoration: none;
        }

            .status-filter a.active {
                background: #007bff !important;
                color: white !important;
                border-color: #007bff !important;
            }

        .action-btn {
            margin-left: 5px;
            margin-top: 5px;
        }

        /* Fix overlay cho dialog */
        .overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 1050;
        }

            .overlay.show {
                display: block;
            }

        .custom-dialog.show {
            display: block;
        }
    </style>
}

<div class="container mt-5">
    <div class="row">
        <div class="col">
            <div class="cart-title">
                <h2 class="title">LỊCH SỬ THANH TOÁN</h2>
            </div>
        </div>
    </div>
</div>

<!-- Filter by Status -->
<div class="container mt-3">
    <div class="d-flex flex-wrap status-filter justify-content-center">
        @{
            var statuses = new List<string> {
                "Tất cả", "Chờ xác nhận", "Chờ vận chuyển", "Chờ giao hàng",
                "Đã giao", "Đã hủy", "Trả hàng/Hoàn tiền"
                };
            var currentStatus = ViewBag.CurrentStatus as string ?? "Tất cả";
        }

        @foreach (var s in statuses)
        {
            <a href="javascript:void(0);" data-status="@s"
               class="btn btn-outline-secondary btn-sm status-filter-btn @(currentStatus == s ? "active" : "")">
                @s
            </a>
        }
    </div>
</div>

<div class="container mt-4 mb-5">
    @if (!Model.Any())
    {
        <p class="text-center text-muted mt-5">Không có đơn hàng nào.</p>
    }
    else
    {
        foreach (var order in Model)
        {
            <div class="order-card border p-4 mb-4 shadow-sm" data-status="@order.Status">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <strong>Mã đơn:</strong> @order.Id <br />
                        <small>Ngày đặt: @order.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                    </div>

                    <div>
                        <span class="badge btn-status
                                    @(order.Status == "Chờ xác nhận" ? "badge-warning" :
                                                            order.Status == "Chờ vận chuyển" ? "badge-info" :
                                                            order.Status == "Chờ giao hàng" ? "badge-primary" :
                                                            order.Status == "Đã giao" ? "badge-success" :
                                                            order.Status == "Đã hủy" ? "badge-danger" :
                                                            order.Status == "Trả hàng/Hoàn tiền" ? "badge-secondary" : "badge-dark")">
                    @order.Status
                </span>
            </div>
        </div>

                <hr />

        @foreach (var item in order.Items)
                {
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="d-flex align-items-center">
                            <img src="@item.Image" alt="Product" style="width:65px;height:65px;border-radius:8px;margin-right:12px;object-fit:cover;" />
                            <div>
                                <strong>@item.Title</strong><br />
                                <small>Giá: @item.Price.ToString("N0")đ | SL: @item.Quantity</small>
                            </div>
                        </div>
                    </div>
                }

                <hr />

                <div class="d-flex justify-content-between align-items-center flex-wrap">
                    <div>
                        <strong>Tổng tiền:</strong>
                        <span class="text-danger font-weight-bold">@order.FinalAmount.ToString("N0")đ</span>
                    </div>

                    <div>
                        <!-- Common Button: View Details -->
                        <a href="@Url.Action("OrderDetails", "Checkout", new { orderId = order.Id })"
                           class="btn btn-sm btn-outline-primary action-btn">Xem Chi Tiết</a>

                            <!-- Dynamic Action Buttons -->
                            @if (order.Status == "Chờ xác nhận")
                            {
                                <a href="@Url.Action("CancelOrder", "Checkout", new { orderId = order.Id })"
                                   class="btn btn-sm btn-outline-danger action-btn"
                                   onclick="return confirm('Bạn có chắc chắn muốn hủy đơn hàng này không?');">
                                    Hủy đơn hàng
                                </a>
                            }
                            else if (order.Status == "Chờ vận chuyển")
                            {
                                <a href="@Url.Action("ContactSeller", "Checkout", new { orderId = order.Id })"
                                   class="btn btn-sm btn-outline-secondary action-btn">Liên hệ người bán</a>
                            }
                            else if (order.Status == "Chờ giao hàng")
                            {
                                <a href="@Url.Action("ConfirmDelivery", "Checkout", new { orderId = order.Id })"
                                   class="btn btn-sm btn-outline-success action-btn">Xác nhận đã giao</a>
                                <a href="@Url.Action("ContactSeller", "Checkout", new { orderId = order.Id })"
                                   class="btn btn-sm btn-outline-secondary action-btn">Liên hệ người bán</a>
                            }
                            else if (order.Status == "Đã giao")
                            {
                                @foreach (var item in order.Items)
                                {
                                    <a href="@Url.Action("ReviewProduct", "Checkout", new { orderId = order.Id, productId = item.ProductId })"
                                       class="btn btn-sm btn-outline-primary action-btn">
                                        Đánh giá
                                    </a>
                                }
                                <a class="btn btn-sm btn-outline-danger action-btn"
                                   href="@Url.Action("ReturnReason", "Checkout")">Yêu cầu trả hàng</a>
                            }

                            else if (order.Status == "Trả hàng/Hoàn tiền")
                            {
                                <a href="@Url.Action("ReturnReason", "Checkout", new { orderId = order.Id })"
                                   class="btn btn-sm btn-outline-secondary action-btn">Lý do trả hàng</a>
                                <a href="@Url.Action("Reorder", "Checkout", new { orderId = order.Id })"
                                   class="btn btn-sm btn-outline-success action-btn">Mua lại</a>
                            }
                        </div>
                    </div>
                </div>
            }
        }

<!-- Review Dialog -->
<div class="overlay" id="reviewOverlay"></div>

<div class="custom-dialog" id="reviewDialog">
    <button class="btn-close-custom" id="btnCloseX">×</button>

    <div class="dialog-product-info">
        <img src="" alt="Product" class="dialog-product-img" id="dlgImg">
        <div class="product-details">
            <div class="product-title" id="dlgTitle">Tên sản phẩm</div>
            <div class="product-price" id="dlgPrice">0đ</div>
        </div>
        <div class="product-qty" id="dlgQty">X1</div>

        <div style="position: absolute; bottom: 15px; right: 15px;">
            <span style="color: #d9534f; font-weight: bold; font-size: 16px;">
                Tổng tiền: <span id="dlgTotal">0đ</span>
            </span>
        </div>
    </div>

    <div class="rating-row">
        <div class="rating-label">Chất lượng sản phẩm:</div>
        <div class="star-rating" id="productRating">
            <i class="fa fa-star star" data-value="1"></i>
            <i class="fa fa-star star" data-value="2"></i>
            <i class="fa fa-star star" data-value="3"></i>
            <i class="fa fa-star star" data-value="4"></i>
            <i class="fa fa-star star" data-value="5"></i>
        </div>
    </div>

    <div class="rating-row">
        <div class="rating-label">Dịch vụ của người bán:</div>
        <div class="star-rating" id="serviceRating">
            <i class="fa fa-star star" data-value="1"></i>
            <i class="fa fa-star star" data-value="2"></i>
            <i class="fa fa-star star" data-value="3"></i>
            <i class="fa fa-star star" data-value="4"></i>
            <i class="fa fa-star star" data-value="5"></i>
        </div>
    </div>

    <label class="section-title">Nhận xét:</label>
    <div style="border: 1px solid #ddd; padding: 5px;">
        <textarea class="lined-textarea" id="reviewComment" rows="4" placeholder="Hãy chia sẻ trải nghiệm của bạn..."></textarea>
    </div>

    <div class="media-upload-container">
        <div class="media-box" data-type="image">
            <label class="section-title" style="margin-top:-20px;margin-bottom:5px">Thêm ảnh</label>
            <i class="fa fa-camera"></i>
            <i class="fa fa-plus" style="font-size: 14px; position: absolute; margin-left: 20px; margin-top: -10px;"></i>
        </div>
        <div class="media-box" data-type="video">
            <label class="section-title" style="margin-top:-20px;margin-bottom:5px">Thêm video</label>
            <i class="fa fa-video"></i>
            <i class="fa fa-plus" style="font-size: 14px; position: absolute; margin-left: 20px; margin-top: -10px;"></i>
        </div>
    </div>
    <input type="file" id="reviewMedia" multiple accept="image/*,video/*" style="display:none;">

    <div class="dialog-actions">
        <button class="btn-submit-review" id="btnSubmitReview">Gửi đánh giá</button>
    </div>
</div>

@section Scripts {
    <script src="~/js/PaymentHistory.js" asp-append-version="true"></script>
    <script>
        // Filter functionality
        document.querySelectorAll('.status-filter-btn').forEach(btn => {
            btn.addEventListener('click', function(e) {
                e.preventDefault();
                const status = this.getAttribute('data-status');

                // Update active button
                document.querySelectorAll('.status-filter-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');

                // Filter orders
                document.querySelectorAll('.order-card').forEach(card => {
                    if (status === 'Tất cả' || card.getAttribute('data-status') === status) {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                });
            });
        });
    </script>
}