@model List<webCore.Models.Order>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Lịch sử Thanh Toán";
}

@section Styles {
    <link rel="stylesheet" href="~/css/PaymentHistory.css" asp-append-version="true" />
    <style>
        .page-title {
            font-size: 2.2rem;
            font-weight: 700;
            color: #007bff;
            text-align: center;
            margin: 30px 0 40px;
        }

        .status-filter a {
            border-radius: 30px !important;
            padding: 8px 20px !important;
            margin: 4px;
            min-width: 120px;
        }

            .status-filter a.active {
                background: #007bff !important;
                color: white !important;
            }

        .order-card {
            border-radius: 15px;
            transition: all 0.3s ease;
        }

            .order-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 30px rgba(0,0,0,0.12);
            }

        .empty-state {
            text-align: center;
            padding: 80px 20px;
            color: #888;
        }

            .empty-state img {
                width: 160px;
                opacity: 0.7;
                margin-bottom: 20px;
            }
    </style>
}

<!-- ===================== TIÊU ĐỀ + BỘ LỌC ===================== -->
<div class="container">
    <h2 class="page-title">LỊCH SỬ THANH TOÁN</h2>

    <!-- Bộ lọc trạng thái -->
    <div class="d-flex flex-wrap justify-content-center gap-2 mb-5 status-filter">
        @{
            var statuses = new List<string> { "Tất cả", "Chờ xác nhận", "Chờ vận chuyển", "Chờ giao hàng", "Đã giao", "Đã hủy", "Trả hàng/Hoàn tiền" };
        }
        @foreach (var s in statuses)
        {
            <a href="#"
               data-status="@s"
               class="btn btn-outline-secondary">
                @s
            </a>

        }
    </div>
    <!-- ===================== NỘI DUNG CHÍNH ===================== -->
    @if (!Model?.Any() ?? true)
    {
        <!-- Chỉ hiện đúng 1 lần khi không có đơn -->
        <div class="empty-state">
            <img src="/image/empty-order.png" alt="Chưa có đơn hàng" />
            <h4 class="mt-3 text-muted">Không có đơn hàng nào.</h4>
            <p>Bạn chưa mua sách nào hoặc đơn hàng đang được xử lý</p>
        </div>
    }
    else
    {
        <!-- Danh sách đơn hàng -->
        foreach (var order in Model)
        {
            <div class="order-card border bg-white p-4 mb-4 shadow" data-status="@order.Status">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <strong>Mã đơn:</strong> #@order.Id<br>
                        <small class="text-muted">Ngày đặt: @order.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                    </div>
                    <span class="badge px-4 py-2
                                @(order.Status.Contains("Chờ xác nhận") ? "bg-warning text-dark" :
                                                    order.Status.Contains("Chờ vận chuyển") ? "bg-info" :
                                                    order.Status.Contains("Chờ giao hàng") ? "bg-primary" :
                                                    order.Status.Contains("Đã giao") ? "bg-success" :
                                                    order.Status.Contains("Đã hủy") ? "bg-danger" :
                                                    order.Status.Contains("Trả hàng") ? "bg-secondary" : "bg-dark")">
                        @order.Status
                    </span>
                </div>

                <hr>

                @foreach (var item in order.Items)
                {
                    <div class="d-flex align-items-center mb-3">
                        <img src="@item.Image" class="rounded me-3" style="width:70px;height:70px;object-fit:cover;">
                        <div>
                            <h6 class="mb-1">@item.Title</h6>
                            <small class="text-muted">
                                @item.Price.ToString("N0")đ × @item.Quantity
                            </small>
                        </div>
                    </div>
                }

                <hr>

                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <strong class="fs-5">Tổng tiền:</strong>
                        <span class="text-danger fs-4 fw-bold">@order.FinalAmount.ToString("N0")đ</span>
                    </div>
                    <div>
                        <a href="@Url.Action("OrderDetails", "Checkout", new { orderId = order.Id })"
                           class="btn btn-outline-primary btn-sm">Xem chi tiết</a>

                        @if (order.Status == "Chờ xác nhận")
                        {
                            <a href="@Url.Action("CancelOrder", "Checkout", new { orderId = order.Id })"
                               class="btn btn-outline-danger btn-sm"
                               onclick="return confirm('Bạn chắc chắn muốn hủy đơn hàng này?')">Hủy đơn</a>
                        }
                        else if (order.Status == "Đã giao")
                        {
                            <a href="@Url.Action("ReviewProduct", "Checkout", new { orderId = order.Id })"
                               class="btn btn-success btn-sm">Đánh giá</a>
                        }
                    </div>
                </div>
            </div>
        }
    }


</div>

<!-- Modal đánh giá (nếu bạn vẫn cần) -->
<div class="overlay" id="reviewOverlay"></div>
<div class="custom-dialog" id="reviewDialog">...</div>

@section Scripts {
    <script src="~/js/PaymentHistory.js"></script>
}