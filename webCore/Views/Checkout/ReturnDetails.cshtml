@model webCore.Models.ReturnRequest

@{
    ViewData["Title"] = "Chi tiết Yêu cầu Trả hàng";
    Layout = "_Layout"; // Layout của người mua
    var order = ViewBag.OrderInfo as webCore.Models.Order;
}

<style>
    .detail-container {
        max-width: 800px;
        margin: 40px auto;
        background: #fff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
    }

    .info-label {
        font-weight: 600;
        color: #555;
        display: block;
        margin-bottom: 8px;
    }

    .info-box {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        border: 1px solid #e9ecef;
    }

    .media-item {
        width: 120px;
        height: 120px;
        object-fit: cover;
        border-radius: 6px;
        border: 1px solid #dee2e6;
        margin-right: 10px;
        margin-bottom: 10px;
        cursor: pointer;
        transition: transform 0.2s;
    }

        .media-item:hover {
            transform: scale(1.05);
            border-color: #007bff;
        }

    .product-mini {
        display: flex;
        align-items: center;
        padding: 12px 0;
        border-bottom: 1px solid #eee;
    }

        .product-mini:last-child {
            border-bottom: none;
        }
</style>

<div class="container">
    <div class="detail-container">

        <h4 class="text-danger mb-4 border-bottom pb-3 text-center" style="font-weight: 700;">
            <i class="fas fa-undo-alt mr-2"></i> CHI TIẾT YÊU CẦU TRẢ HÀNG
        </h4>

        @if (order != null)
        {
            <div class="mb-4">
                <label class="info-label">Đơn hàng liên quan: <span class="text-primary">#@order.Id</span></label>
                <div class="info-box">
                    <div class="d-flex justify-content-between">
                        <div><strong>Ngày đặt hàng:</strong> @order.CreatedAt.AddHours(7).ToString("dd/MM/yyyy HH:mm")</div>
                        <span class="badge badge-secondary">@order.Status</span>
                    </div>

                    <div class="mt-3 bg-white border rounded p-2">
                        @foreach (var item in order.Items)
                        {
                            <div class="product-mini">
                                <img src="@item.Image" style="width: 60px; height: 60px; border-radius: 6px; object-fit: cover; margin-right: 15px; border: 1px solid #f0f0f0;">
                                <div>
                                    <div style="font-weight: 600; font-size: 15px;">@item.Title</div>
                                    <small class="text-muted">Đơn giá: @item.Price.ToString("N0")đ x <strong class="text-dark">@item.Quantity</strong></small>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="text-right mt-3">
                        <span class="text-muted">Tổng số tiền hoàn dự kiến:</span>
                        <span class="text-danger font-weight-bold ml-2" style="font-size: 18px;">@order.FinalAmount.ToString("N0")đ</span>
                    </div>
                </div>
            </div>
        }

        <div class="mb-4">
            <label class="info-label">Lý do trả hàng & Mô tả:</label>
            <div class="info-box text-dark" style="font-size: 15px; line-height: 1.6;">
                @if (string.IsNullOrEmpty(Model.Reason))
                {
                    <span class="text-muted font-italic">Không có mô tả chi tiết.</span>
                }
                else
                {
                    @Model.Reason
                }
            </div>
            <div class="text-right mt-1">
                <small class="text-muted">Thời gian gửi yêu cầu: @Model.CreatedAt.AddHours(7).ToString("dd/MM/yyyy HH:mm")</small>
            </div>
        </div>

        <div class="mb-4">
            <label class="info-label">Bằng chứng (Ảnh/Video):</label>
            <div class="d-flex flex-wrap">
                @if (Model.MediaUrls != null && Model.MediaUrls.Any())
                {
                    foreach (var url in Model.MediaUrls)
                    {
                        var isVideo = url.Contains(".mp4") || url.Contains(".webm") || url.Contains(".mov");
                        if (isVideo)
                        {
                            <video src="@url" controls class="media-item"></video>
                        }
                        else
                        {
                            <a href="@url" target="_blank">
                                <img src="@url" class="media-item" title="Nhấn để xem ảnh lớn" />
                            </a>
                        }
                    }
                }
                else
                {
                    <div class="alert alert-light w-100 text-center text-muted border border-light">
                        <i class="fas fa-image mr-2"></i> Không có hình ảnh hoặc video minh chứng nào được tải lên.
                    </div>
                }
            </div>
        </div>

        <div class="text-center mt-5 pt-3 border-top">
            <a href="@Url.Action("PaymentHistory", "Checkout")" class="btn btn-secondary px-4 mr-2 shadow-sm">
                <i class="fas fa-arrow-left mr-1"></i> Quay lại lịch sử
            </a>

            <a href="@Url.Action("ContactSeller", "Checkout", new { orderId = Model.OrderId })" class="btn btn-primary px-4 shadow-sm">
                <i class="fas fa-comments mr-1"></i> Chat với Shop
            </a>
        </div>
    </div>
</div>