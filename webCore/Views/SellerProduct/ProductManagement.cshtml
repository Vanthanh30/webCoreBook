@{
    ViewData["Title"] = "Sản phẩm của tôi";
    Layout = "~/Views/Shared/_SellerLayout.cshtml";
}
<link rel="stylesheet" href="/css/Account_admin.css" />

<div class="container">
    <h1>Danh sách sản phẩm của tôi</h1>
    <div class="button-container">
        <a href="@Url.Action("AddProduct", "SellerProduct")" class="add-btn">
            <i class="fas fa-plus icon"></i> Thêm sản phẩm mới
        </a>
    </div>

    <table class="account-table">
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Hình ảnh</th>
                <th>Danh mục</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Trạng thái</th>
                <th>Vị trí</th>
                <th class="actions-header">Hành động</th>
            </tr>
        </thead>
        <tbody>
            <!-- Dữ liệu giả - Sản phẩm 1 -->
            <tr>
                <td>Đắc Nhân Tâm</td>
                <td>
                    <img src="https://salt.tikicdn.com/cache/280x280/ts/product/3e/ae/52/99a4867cd5d27c84af5e1018653eda9e.jpg" alt="Image" style="width: 50px; height: 50px" />
                </td>
                <td>Sách Kỹ Năng Sống</td>
                <td>86,000đ</td>
                <td>50</td>
                <td class="status-hoạt động">
                    <span class="status-active">Hoạt động</span>
                </td>
                <td>Nổi bật</td>
                <td class="actions-cell">
                    <a class="icon-btn edit-btn" title="Edit" href="@Url.Action("EditProduct","Seller")">
                        <i class="fas fa-edit"></i>
                    </a>
                    <button type="button" class="icon-btn delete-btn" title="Delete" onclick="if(confirm('Bạn có chắc chắn muốn xóa sản phẩm này?')) alert('Đã xóa')">
                        <i class="fas fa-trash-alt"></i>
