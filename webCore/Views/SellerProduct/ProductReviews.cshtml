@model List<webCore.Models.Review>
@{
    ViewData["Title"] = "Đánh giá sản phẩm";
    Layout = "~/Views/Shared/_SellerLayout.cshtml";

    var product = ViewBag.Product as webCore.Models.Product_admin;
    var starCounts = ViewBag.StarCounts as Dictionary<int, int>;
    int currentFilter = ViewBag.CurrentRatingFilter ?? 0; // 0 nghĩa là Tất cả
}

<style>
    .review-header {
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 20px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
    }

    .product-info {
        display: flex;
        gap: 15px;
        align-items: center;
        border-bottom: 1px solid #eee;
        padding-bottom: 15px;
        margin-bottom: 15px;
    }

        .product-info img {
            width: 60px;
            height: 60px;
            object-fit: cover;
            border-radius: 5px;
            border: 1px solid #ddd;
        }

    .rating-overview {
        display: flex;
        align-items: center;
        gap: 30px;
    }

    .avg-score {
        text-align: center;
        color: #ee4d2d;
    }

        .avg-score .score {
            font-size: 32px;
            font-weight: bold;
        }

        .avg-score .stars {
            font-size: 18px;
        }

    .filter-buttons {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

    .btn-filter {
        border: 1px solid #ddd;
        background: #fff;
        padding: 5px 15px;
        border-radius: 20px;
        color: #333;
        text-decoration: none;
        transition: 0.2s;
    }

        .btn-filter:hover {
            background: #f8f9fa;
            text-decoration: none;
            color: #333;
        }

        .btn-filter.active {
            border-color: #ee4d2d;
            color: #ee4d2d;
            background: #fff5f1;
        }

    .review-item {
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 15px;
        border: 1px solid #eee;
    }

    .user-profile {
        display: flex;
        gap: 10px;
        align-items: center;
        margin-bottom: 10px;
    }

    .avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        object-fit: cover;
    }

    .review-date {
        font-size: 12px;
        color: #888;
        margin-left: auto;
    }

    .review-content {
        margin-top: 10px;
        color: #333;
    }

    .review-media {
        display: flex;
        gap: 10px;
        margin-top: 10px;
    }

    .media-thumb {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 4px;
        cursor: pointer;
        border: 1px solid #ddd;
    }
</style>

<div class="container py-4">
    <a href="@Url.Action("ProductManagement", "SellerProduct")" class="text-muted mb-3 d-inline-block">
        <i class="fas fa-arrow-left"></i> Quay lại danh sách
    </a>

    <div class="review-header">
        <div class="product-info">
            <img src="@product.Image" alt="@product.Title" onerror="this.src='/images/no-image.png'">
            <div>
                <h5 class="mb-1">@product.Title</h5>
                <span class="text-muted small">Danh mục: @product.CategoryTitle</span>
            </div>
        </div>

        <div class="rating-overview">
            <div class="avg-score">
                <div class="score">@ViewBag.AverageRating<span style="font-size:18px">/5</span></div>
                <div class="stars">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <i class="fas fa-star @(i <= Math.Round((double)ViewBag.AverageRating) ? "text-warning" : "text-muted")"></i>
                    }
                </div>
            </div>

            <div class="filter-buttons">
                <a href="@Url.Action("ProductReviews", new { productId = product.Id })"
                   class="btn-filter @(currentFilter == 0 ? "active" : "")">
                    Tất cả (@ViewBag.TotalReviews)
                </a>
                @for (int i = 5; i >= 1; i--)
                {
                    <a href="@Url.Action("ProductReviews", new { productId = product.Id, rating = i })"
                       class="btn-filter @(currentFilter == i ? "active" : "")">
                        @i Sao (@starCounts[i])
                    </a>
                }
            </div>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <div class="review-item">
                <div class="user-profile">
                    <img src="@item.UserAvatar" class="avatar" onerror="this.src='https://res.cloudinary.com/demo/image/upload/d_avatar.png/non_existing_id.png'">
                    <div>
                        <div style="font-weight:600">@item.UserName</div>
                        <div class="text-warning" style="font-size:12px">
                            @for (int i = 0; i < item.QualityRating; i++)
                            {
                                <i class="fas fa-star"></i>
                            }
                        </div>
                    </div>
                    <div class="review-date">@item.CreatedAt.AddHours(7).ToString("dd/MM/yyyy HH:mm")</div>
                </div>

                <div class="review-content">
                    @item.Comment
                </div>

                @if (item.MediaUrls != null && item.MediaUrls.Any())
                {
                    <div class="review-media">
                        @foreach (var media in item.MediaUrls)
                        {
                            if (media.EndsWith(".mp4") || media.EndsWith(".webm"))
                            {
                                <video src="@media" class="media-thumb" controls></video>
                            }
                            else
                            {
                                <img src="@media" class="media-thumb" onclick="window.open(this.src)">
                            }
                        }
                    </div>
                }
            </div>
        }
    }
    else
    {
        <div class="text-center py-5 text-muted">
            <i class="far fa-comment-dots fa-3x mb-3"></i>
            <p>Chưa có đánh giá nào cho bộ lọc này.</p>
        </div>
    }
</div>