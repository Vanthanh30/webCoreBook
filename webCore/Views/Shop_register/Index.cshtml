@{
    Layout = "_Layout";
    ViewData["Title"] = "Đăng ký Shop";
}

<link rel="stylesheet" href="~/css/shop-register.css" asp-append-version="true">

<div class="main-content">
    <div id="welcomePage" class="welcome-page">
        <div class="welcome-icon"></div>
        <h1 class="welcome-title">Chào mừng đến với TYB BOOK!</h1>
        <p class="welcome-text">
            Vui lòng cung cấp thông tin để thành lập tài khoản người bán<br>
            Hãy điền đầy đủ thông tin để bắt đầu kinh doanh trên nền tảng của chúng tôi
        </p>
        <button class="btn-start" onclick="showRegistrationForm()">Bắt đầu đăng ký</button>
    </div>

    <div id="registrationForm" class="registration-form">
        <div class="form-header">
            <h2>Đăng ký thông tin Shop</h2>
            <p>Vui lòng điền đầy đủ thông tin bên dưới</p>
        </div>

        <form id="shopForm" method="post" asp-action="SubmitShopInfo" asp-controller="Shop_register" enctype="multipart/form-data">

            <div class="avatar-section">
                <div class="avatar-upload-wrapper">
                    <label for="avatarInput" class="avatar-preview">
                        <img id="avatarPreview" src="" alt="" style="display: none;">
                        <div id="avatarPlaceholder" class="avatar-placeholder">
                            <i class="fa-solid fa-store"></i>
                        </div>
                        <div class="avatar-overlay">
                            <i class="fa-solid fa-camera"></i>
                        </div>
                    </label>
                    <input type="file" id="avatarInput" name="Avatar" accept="image/*">
                </div>
                <label class="avatar-label">Logo/Avatar Shop của bạn</label>
            </div>

            <div class="form-section">
                <div class="section-title">
                    <i class="fa-solid fa-info-circle"></i>
                    Thông tin cơ bản
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <span class="required">*</span>
                        Tên Shop
                    </label>
                    <input type="text" class="form-control" id="shopName" name="ShopName" placeholder="Nhập tên shop của bạn" maxlength="50" required>
                    <div class="char-count">
                        <span id="charCount">0</span>/50
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <span class="required">*</span>
                        Mô tả Shop
                    </label>
                    <textarea class="form-control" id="description" name="Description" placeholder="Mô tả ngắn gọn về shop của bạn..." maxlength="500" required></textarea>
                    <div class="char-count">
                        <span id="descCharCount">0</span>/500
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <span class="required">*</span>
                        Loại hình kinh doanh
                    </label>
                    <select class="form-control" id="businessType" name="BusinessType" required>
                        <option value="">Chọn loại hình</option>
                        <option value="Cá nhân">Cá nhân</option>
                        <option value="Công ty">Công ty</option>
                        <option value="Hộ kinh doanh">Hộ kinh doanh</option>
                    </select>
                </div>
            </div>

            <div class="form-section">
                <div class="section-title">
                    <i class="fa-solid fa-address-book"></i>
                    Thông tin liên hệ
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">
                            <span class="required">*</span> Email
                        </label>

                        <input type="email" id="emailDisplay" class="form-control" disabled>
                        <input type="hidden" id="email" name="Email">
                    </div>

                    <div class="form-group">
                        <label class="form-label">
                            <span class="required">*</span> Số điện thoại
                        </label>

                        <input type="tel" id="phoneDisplay" class="form-control" disabled>
                        <input type="hidden" id="phone" name="Phone">
                    </div>
                </div>


            </div>

            <div class="form-section">
                <div class="section-title">
                    <i class="fa-solid fa-map-marker-alt"></i>
                    Địa chỉ lấy hàng
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <span class="required">*</span>
                        Địa chỉ chi tiết
                    </label>
                    <input type="text" class="form-control" id="address" name="Address" placeholder="Số nhà, tên đường..." required>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-primary">
                    Đăng ký Shop <i class="fa-solid fa-arrow-right"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<script src="~/js/shop-register.js" asp-append-version="true"></script>