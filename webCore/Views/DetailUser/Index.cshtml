@model webCore.Models.User

@{
    Layout = "_Layout";
    ViewData["Title"] = "Thông tin cá nhân";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="~/css/user.css" asp-append-version="true" />
}

<div class="user-profile-page">
    <div class="container">
        <div class="back-button-wrapper">
            <a href="/Home/Index" class="back-button">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>

        <div class="page-header">
            <h2 class="page-title">THÔNG TIN CÁ NHÂN</h2>
        </div>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["Message"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <div class="profile-card">
            <form method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-lg-3 col-md-4 mb-4">
                        <div class="profile-picture-section">
                            <div class="profile-picture-wrapper">
                                <img id="profilePreview"
                                     src="@(ViewBag.ProfileImage ?? "https://via.placeholder.com/150")"
                                     alt="Ảnh đại diện"
                                     class="profile-picture" />
                                <div class="profile-picture-overlay">
                                    <i class="fas fa-camera"></i>
                                </div>
                            </div>
                            <input type="file"
                                   id="profileImageInput"
                                   name="ProfileImage"
                                   class="d-none"
                                   accept="image/*" />
                            <button type="button"
                                    class="btn btn-outline-primary btn-block btn-change-photo"
                                    onclick="document.getElementById('profileImageInput').click();">
                                <i class="fas fa-upload"></i> Chọn ảnh
                            </button>
                            <small class="text-muted d-block text-center mt-2">
                                Dung lượng tối đa 2MB
                            </small>
                        </div>
                    </div>

                    <div class="col-lg-9 col-md-8">
                        <div class="form-content">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-group-custom">
                                        <label for="name" class="form-label">
                                            <i class="fas fa-user"></i> Họ và tên
                                        </label>
                                        <input type="text"
                                               class="form-control"
                                               id="name"
                                               name="Name"
                                               value="@(Model?.Name ?? "")"
                                               placeholder="Nhập họ và tên"
                                               required />
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger small" })
                                    </div>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <div class="form-group-custom">
                                        <label for="phone" class="form-label">
                                            <i class="fas fa-phone"></i> Số điện thoại
                                        </label>
                                        <input type="tel"
                                               class="form-control"
                                               id="phone"
                                               name="Phone"
                                               value="@(Model?.Phone ?? "")"
                                               placeholder="Nhập số điện thoại"
                                               pattern="\d{10}"
                                               maxlength="10"
                                               title="Số điện thoại phải đủ 10 số"
                                               required />
                                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger small" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-group-custom">
                                        <label class="form-label">
                                            <i class="fas fa-venus-mars"></i> Giới tính
                                        </label>
                                        <div class="gender-options">
                                            <div class="form-check form-check-inline">
                                                <input type="radio"
                                                       class="form-check-input"
                                                       id="male"
                                                       name="Gender"
                                                       value="male"
                                                       @(Model?.Gender == "male" ? "checked" : "") />
                                                <label class="form-check-label" for="male">
                                                    <i class="fas fa-mars"></i> Nam
                                                </label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input type="radio"
                                                       class="form-check-input"
                                                       id="female"
                                                       name="Gender"
                                                       value="female"
                                                       @(Model?.Gender == "female" ? "checked" : "") />
                                                <label class="form-check-label" for="female">
                                                    <i class="fas fa-venus"></i> Nữ
                                                </label>
                                            </div>
                                        </div>
                                        @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger small" })
                                    </div>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <div class="form-group-custom">
                                        <label for="birthday" class="form-label">
                                            <i class="fas fa-birthday-cake"></i> Ngày sinh
                                        </label>
                                        <input type="date"
                                               class="form-control"
                                               id="birthday"
                                               name="Birthday"
                                               value="@(Model?.Birthday?.ToString("yyyy-MM-dd") ?? "")"
                                               max="@DateTime.Now.AddYears(-16).ToString("yyyy-MM-dd")"
                                               required />
                                        @Html.ValidationMessageFor(model => model.Birthday, "", new { @class = "text-danger small" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-group-custom">
                                        <label for="email" class="form-label">
                                            <i class="fas fa-envelope"></i> Email
                                        </label>
                                        <input type="email"
                                               class="form-control"
                                               id="email"
                                               name="Email"
                                               value="@(Model?.Email ?? "")"
                                               disabled />
                                        <small class="text-muted">Email không thể thay đổi</small>
                                    </div>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <div class="form-group-custom">
                                        <label for="password" class="form-label">
                                            <i class="fas fa-lock"></i> Mật khẩu
                                        </label>
                                        <input type="password"
                                               class="form-control"
                                               id="password"
                                               name="Password"
                                               placeholder="Để trống nếu không muốn thay đổi" />
                                        <small class="text-muted">
                                            Để trống nếu không muốn thay đổi mật khẩu
                                        </small>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12 mb-3">
                                    <div class="form-group-custom">
                                        <label for="address" class="form-label">
                                            <i class="fas fa-map-marker-alt"></i> Địa chỉ
                                        </label>
                                        <textarea class="form-control"
                                                  id="address"
                                                  name="Address"
                                                  placeholder="Nhập địa chỉ của bạn"
                                                  rows="3">@Model?.Address</textarea>
                                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger small" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-actions">
                                <button type="submit" class="btn btn-primary btn-update">
                                    <i class="fas fa-save"></i> Cập nhật thông tin
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        document.getElementById('profileImageInput').addEventListener('change', function (event) {
            const file = event.target.files[0];
            if (file) {
                if (file.size > 2 * 1024 * 1024) {
                    alert('Kích thước ảnh không được vượt quá 2MB!');
                    this.value = '';
                    return;
                }

                if (!file.type.startsWith('image/')) {
                    alert('Vui lòng chọn file ảnh!');
                    this.value = '';
                    return;
                }

                const reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('profilePreview').src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });

        $(document).ready(function() {
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);
        });
    </script>
}