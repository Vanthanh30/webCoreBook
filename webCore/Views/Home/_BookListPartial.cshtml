@* Views/Home/_BookListPartial.cshtml *@
@model List<KeyValuePair<string, List<webCore.Models.Product_admin>>>

@if (Model != null && Model.Any())
{
    foreach (var group in Model)
    {
        var sectionClass = group.Key == "Nổi bật" ? "flash-sale" :
                          group.Key == "Mới" ? "new" : "bestseller";
        var sectionTitle = group.Key == "Nổi bật" ? "FLASH SALE" :
                          group.Key == "Mới" ? "MỚI NHẤT" : "BÁN CHẠY";

        <div class="product-section" data-section-type="@group.Key">
            <div class="section-badge @sectionClass">
                @sectionTitle
            </div>

            <div class="products-slider-wrapper">
                <button class="slider-arrow left" onclick="slideProducts(this, -1)">‹</button>

                <div class="products-slider">
                    @foreach (var product in group.Value)
                    {
                        <div class="product-box">
                            <a href="@Url.Action("DetailProduct", "DetailProduct", new { id = product.Id })">
                                @if (product.DiscountPercentage > 0)
                                {
                                    <span class="product-discount-badge">-@product.DiscountPercentage%</span>
                                }
                                <div class="product-img-wrapper">
                                    <img src="@product.Image" alt="@product.Title">
                                </div>
                                <div class="product-details">
                                    <h3 class="product-name">@product.Title</h3>
                                    @if (product.DiscountPercentage > 0)
                                    {
                                        <div class="product-price-old">@string.Format("{0:N0} đ", product.Price)</div>
                                        <div class="product-price-new">@string.Format("{0:N0} đ", product.Price * (1 - product.DiscountPercentage / 100))</div>
                                    }
                                    else
                                    {
                                        <div class="product-price-single">@string.Format("{0:N0} đ", product.Price)</div>
                                    }
                                    @if (group.Key == "Nổi bật")
                                    {
                                        <div class="product-stock">Đã bán 10</div>
                                    }
                                </div>
                            </a>
                        </div>
                    }
                </div>

                <button class="slider-arrow right" onclick="slideProducts(this, 1)">›</button>
            </div>
        </div>
    }
}
else
{
    <p class="text-center">Không có sản phẩm nào để hiển thị.</p>
}