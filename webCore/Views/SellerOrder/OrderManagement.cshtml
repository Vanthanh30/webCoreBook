            console.log("Attempting to initialize dropdown...");

            if (typeof initializeUserDropdown === 'function') {
                console.log("✅ Found initializeUserDropdown, calling it now");
                initializeUserDropdown();
                return true;
            } else {
                console.log("⏳ initializeUserDropdown not found yet, waiting...");
                return false;
            }
        }

        // Try to initialize immediately
        var initialized = initOrderPageDropdown();

        // If not successful, keep trying
        if (!initialized) {
            var attempts = 0;
            var maxAttempts = 20; // Try for 1 second (20 * 50ms)

            var initInterval = setInterval(function() {
                attempts++;
                console.log("Retry attempt:", attempts);

                if (initOrderPageDropdown()) {
                    console.log("✅ Dropdown initialized successfully on attempt", attempts);
                    clearInterval(initInterval);
                } else if (attempts >= maxAttempts) {
                    console.error("❌ Failed to initialize dropdown after", maxAttempts, "attempts");
                    clearInterval(initInterval);
                }
            }, 50);
        }

        // Also try on DOMContentLoaded as backup
        document.addEventListener('DOMContentLoaded', function() {
            console.log("DOMContentLoaded fired in OrderManagement");
            setTimeout(function() {
                initOrderPageDropdown();
            }, 100);
        });
    </script>
