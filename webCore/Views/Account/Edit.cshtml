@{
    ViewData["Title"] = "Chỉnh sửa tài khoản";
    Layout = "Admin";

    string id = ViewBag.Id;
}

<style>
    .form-container {
        width: 100%;
        margin: 20px auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        font-size: 24px;
        color: #333;
        margin-bottom: 20px;
    }

    .alert-danger {
        background-color: #f8d7da;
        border-color: #f5c6cb;
        color: #721c24;
        padding: 10px;
        margin-bottom: 15px;
        border-radius: 4px;
    }

    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
        font-size: 14px;
    }

    input[type="text"], input[type="email"], input[type="password"], select {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 14px;
    }

    input[type="file"] {
        margin-bottom: 15px;
    }

    .image-preview-container {
        text-align: start;
        margin-bottom: 15px;
    }

    #imagePreview {
        width: 200px;
        height: 150px;
        border-radius: 4px;
        margin-top: 10px;
        display: block;
        object-fit: cover;
        margin-left: auto;
        margin-right: auto;
    }

    .status {
        margin-bottom: 20px;
    }

        .status label {
            margin-right: 10px;
            font-size: 14px;
        }

    input[type="radio"] {
        margin-right: 5px;
    }

    button[type="submit"] {
        background-color: #4CAF50;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        font-size: 16px;
        cursor: pointer;
        width: 100%;
        transition: background-color 0.3s;
    }

        button[type="submit"]:hover {
            background-color: #45a049;
        }
</style>

<div class="form-container">
    <h2>Chỉnh sửa tài khoản</h2>

    <div id="errorBox" class="alert alert-danger d-none"></div>

    <form id="editForm" enctype="multipart/form-data">

        <input type="hidden" id="Id" value="@id" />

        <label for="Name">Họ tên *</label>
        <input type="text" id="Name" required />

        <label for="Email">Email *</label>
        <input type="email" id="Email" required />

        <label for="Phone">Điện thoại *</label>
        <input type="text" id="Phone" required style="width:100%" />

        <label for="Password">Mật Khẩu (Chỉ nhập nếu muốn thay đổi)</label>
        <input type="password" id="Password" placeholder="Không thay đổi nếu để trống" />

        <label for="image">Ảnh đại diện</label>
        <input type="file" id="image" accept="image/*" onchange="previewImage(event)" />

        <div class="image-preview-container">
            <img id="imagePreview" src="" alt="Ảnh xem trước" />
        </div>

        <label for="RoleId">Phân quyền</label>
        <select id="RoleId"></select>

        <div class="status">
            <label>Trạng thái</label>
            <input type="radio" id="active" name="Status" value="1" />
            <label for="active" class="active">Hoạt động</label>

            <input type="radio" id="inactive" name="Status" value="0" />
            <label for="inactive" class="inactive">Dừng hoạt động</label>
        </div>

        <button type="submit">Cập nhật</button>
    </form>
</div>

<script>
    const userId = "@id";

    async function loadUser() {
        const res = await fetch(`/api/account/edit/${userId}`);
        if (!res.ok) return showError("Không tải được dữ liệu.");

        const user = await res.json();

        document.getElementById("Name").value = user.name;
        document.getElementById("Email").value = user.email;
        document.getElementById("Phone").value = user.phone || "";

        loadPreviewImage(user.profileImage);
        loadRoles(user.roleId);

        if (user.status === 1)
            document.getElementById("active").checked = true;
        else
            document.getElementById("inactive").checked = true;
    }

    function loadPreviewImage(profileImage) {
        const container = document.querySelector(".image-preview-container");
        const img = document.getElementById("imagePreview");

        container.innerHTML = ""; 
        container.appendChild(img); 

        if (profileImage && profileImage !== "default-image-url") {
            img.src = profileImage;
            img.style.display = "block";
        } else {
            img.style.display = "none"; 

            container.innerHTML += `
                <i class="fas fa-user-circle"
                   style="font-size: 80px; color: #999; display:block; text-align:center;">
                </i>`;
        }
    }

    function previewImage(e) {
        const file = e.target.files[0];
        const img = document.getElementById("imagePreview");
        const container = document.querySelector(".image-preview-container");

        if (file) {
            img.src = URL.createObjectURL(file);
            img.style.display = "block";

            container.querySelector("i")?.remove();
        }
    }

    async function loadRoles(selected) {
        const res = await fetch("/api/role/list");
        const roles = await res.json();

        const select = document.getElementById("RoleId");
        select.innerHTML = "";

        roles.forEach(r => {
            const opt = document.createElement("option");
            opt.value = r.id;
            opt.textContent = r.name;

            if (selected.includes(r.id)) opt.selected = true;

            select.appendChild(opt);
        });
    }

    document.getElementById("editForm").addEventListener("submit", async function (e) {
        e.preventDefault();

        const fd = new FormData();
        fd.append("Name", document.getElementById("Name").value);
        fd.append("Email", document.getElementById("Email").value);
        fd.append("Phone", document.getElementById("Phone").value);

        const pass = document.getElementById("Password").value;
        if (pass) fd.append("Password", pass);

        const img = document.getElementById("image").files[0];
        if (img) fd.append("ProfileImage", img);

        const status = document.querySelector("input[name='Status']:checked").value;
        fd.append("Status", parseInt(status));

        const roleId = document.getElementById("RoleId").value;
        fd.append("RoleId[0]", roleId);

        const res = await fetch(`/api/account/edit/${userId}`, {
            method: "PUT",
            body: fd
        });

        const result = await res.json();
        if (!result.success) return showError(result.message);

        alert("Cập nhật thành công!");
        window.location.href = "/Account";
    });

    function showError(msg) {
        const box = document.getElementById("errorBox");
        box.innerHTML = msg;
        box.classList.remove("d-none");
    }

    loadUser();
</script>
